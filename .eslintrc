{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"modules": true
		},
		"project": "./tsconfig.json"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"no-setter-return": 1,
		"no-unreachable": 1,
		"no-unsafe-finally": 1,
		"require-atomic-updates": 1,
		"valid-typeof": 1,
		"no-throw-literal": 1,
		"no-with": 1,
		"@typescript-eslint/no-floating-promises": ["error", { "ignoreIIFE": true }]
	}
}
